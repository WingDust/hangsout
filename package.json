{
  "name": "hangsout",
  "displayName": "hangsout",
  "description": "hangs out mean save and show hover",
  "version": "0.0.3",
  "publisher": "wingdust",
  "engines": {
    "vscode": "^1.58.0"
  },
  "icon": "hangsout.png",
  "homepage": "https://github.com/WingDust/hangsout",
  "bugs": {
    "url": "https://github.com/WingDust/hangsout.git"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WingDust/hangsout"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.58.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "ts-loader": "^9.2.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "hangsout.hangsoutShowHoverEnable",
        "title": "HangsOut: ShowHoverEnable"
      },
      {
        "command": "hangsout.hangsoutShowHoverDisable",
        "title": "HangsOut: ShowHoverDisable"
      },
      {
        "command": "hangsout.hangsoutSaveEnable",
        "title": "HangsOut: SaveEnable"
      },
      {
        "command": "hangsout.hangsoutSaveDisable",
        "title": "HangsOut: SaveDisable"
      }
    ],
    "configuration": {
      "title": "hangsout",
      "type": "object",
      "properties": {
        "hangsout.delay": {
          "type": "number",
          "description": "延时多少保存与显示Hover，1000 为 1 秒",
          "default": 3000
        }
      }
    }
  }
}
